<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Happy Healthy Home</h1>
    </div>
</div>

<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">LOGOUT</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container noMargin">
    <div class="row">
        <div class="col-sm">
            <h4>Add Child</h4>
            <form class="login">
                <div class="form-group">
                    <input type="text" class="form-control" id="text-input" placeholder="Name">
                </div>
                <button class="addChild">Add</button>
            </form>


        </div>
        <div class="col-sm fluid">
            <div class="userInfo">
                <div class="infoBody">
                    <h2 class="userName">{{{family}}} Family</h2>
                </div>
            </div>
            {{#each kids}}
            <div class="card" style="width: 18rem;">
                <img class="card-img-top"
                    src="https://image.freepik.com/free-vector/cute-boy-face-cartoon_18591-41509.jpg"
                    alt="Card image cap">
                <div class="card-body">

                    <h5 class="card-title">{{{this.kidName}}}</h5>
                </div>
                <ul class="list-group">
                    <h4>Todays Tasks</h4>
                    <li class="list-group-item">{{{this.kidTasks}}}<br><br>{{{this.updatedAt}}}<br><button
                            class="complete" id={{{this.id}}}>Delete this user</button>
                    </li>
                </ul>
            </div>
            {{/each}}
        </div>
        <div class="col-sm">
            <form id="cms">
                <div class="form-group">
                    <div class="form-group">
                        <h4 class="taskHeading">Add Task</h4>

                    </div>
                    <br>
                    <label for="title">Recipent</label>
                    <input placeholder="Name" type="text" class="form-control" id="title">
                    <br />
                    <label for="body">Task</label>
                    <textarea placeholder="Task" class="form-control" rows="1" id="body"></textarea>

                    <br />
                    <button type="submit" class="btn btn-success submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="part2">
    <p id="txt6"><i class="material-icons tiny"> 2021 Three Dudes And A Chore</p>
</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="./js/home.js"></script>